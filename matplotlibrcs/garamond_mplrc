# matplotlibrc
# ------------
#
# BACKEND
backend: pgf
#
# SAVING FIGURES
savefig.dpi: 600
savefig.transparent: True
figure.dpi: 600

# AXES
axes.linewidth: 1.2
axes.xmargin: .03
axes.ymargin: .03

# LINES
lines.linewidth: 1.0
lines.markersize: 4

# FONT (XeLaTeX) - Garamond and Garamond math
font.family: serif
text.usetex: True
pgf.rcfonts: False
pgf.preamble: \usepackage{amsmath} \usepackage{xcolor} \usepackage{nicefrac} \usepackage{physics} \usepackage{siunitx} \usepackage{fontspec} \usepackage[math-style=ISO,bold-style=ISO]{unicode-math} \setmainfont{EBGaramond}[Path=/home/simon/.fonts/EBGaramond/,Extension=.otf,UprightFont=*-Regular,BoldFont=*-Bold,ItalicFont=*-Italic,BoldItalicFont=*-BoldItalic] \setmathfont{Garamond-Math.otf}[Path=/home/simon/.fonts/,StylisticSet={5}] \setmonofont{JuliaMono}[Scale=MatchLowercase,Path=/home/simon/.fonts/JuliaMono/,Extension=.ttf,UprightFont=*-Regular,BoldFont=*-Bold,ItalicFont=*-RegularItalic,BoldItalicFont=*-BoldItalic] \definecolor{col1}{HTML}{E42A00} \definecolor{col2}{HTML}{0051FE} \definecolor{col3}{HTML}{E6AC00} \definecolor{col4}{HTML}{A01FDF} \definecolor{col5}{HTML}{28A428} \definecolor{col6}{HTML}{FF7B00}
pgf.texsystem: xelatex

# COLOR
axes.prop_cycle: cycler('color', ['E42A00', '0051FE', 'E6AC00', 'A01FDF', '28A428',  'FF7B00'])

# TICKS
xtick.labelsize: small
ytick.labelsize: small

# LEGEND
legend.edgecolor: k
legend.facecolor: ffffff

# PATCHES
patch.linewidth: 1.2 # mainly to increase legend linewidth
